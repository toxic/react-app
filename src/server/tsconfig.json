{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "lib": ["dom", "es2017"],
    "mapRoot": "../../dist/server",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist/server",
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "../../node_modules/@types"
    ]
  }
}