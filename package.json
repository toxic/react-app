  "scripts": {
    "client:build": "webpack --config webpack.config.js  --progress --profile --bail",
    "client:run": "webpack-dev-server --content-base src/client --watch-content-base  --devtool inline-source-map --hot",
    "server:build": "tsc -p ./src/server",
    "server:run": "npm run server:build && concurrently \"tsc -w -p ./src/server\" \"nodemon dist/server/server.js\"",
    "start": "concurrently \"npm run server:run\" \"npm run client:run\"",
    "lint": "tslint -p tsconfig.json && tslint -p server/tsconfig.json",
    "build": "npm run client:build && npm run server:build && cp package.json dist/ && cp package-lock.json dist/"
  }
